{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist/server", // 💡 루트 기준으로 dist 위치 설정
    "rootDir": ".", // server 폴더 내에서 시작
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*"], // server 폴더 내 전체를 포함
  "exclude": ["node_modules", "../dist"],
  "types": ["express", "./types/express.d.ts"]
}
